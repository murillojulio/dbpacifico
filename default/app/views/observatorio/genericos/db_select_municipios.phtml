<script type="text/javascript">
    $(document).ready(function() 
    {        
        $("#caso_municipio_id").on('change', function(e) {

            //Para partial ubicacion
            //$("#btn_anadir_ubicacion").attr('class', 'btn btn-success disabled form-control');
