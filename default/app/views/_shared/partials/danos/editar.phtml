        $.ajax(url, {
            data: datos,
            method: 'POST',
            success: function(data, textStatus, jqXHR) {
                jsSpinner('hide');
                $("#div_modal_editar").html(data);
                let modal = $("#modal-editar-dano");
                modal.modal('show');
            },
            error: function(jqXHR, textStatus, errorThrown) {
                jsSpinner('hide');
                alert('ERROR en cargarModalEditarAfectacionDanoTerritorio()');
            }
        });
    }

